// Hallar la suma de tres números conociendo los valores

package Exercises;

import java.util.Scanner;

public class Exercise2

	public static void main(String[] args) 
		
		Scanner teclado = new Scanner(System.in);
		
		int numero1;
		int numero2;
		int numero3;
				
		System.out.println("Ingrese tres números enteros, dichos números se van a sumar ");
		
		System.out.println("Ingrese su primer número ");
		numero1 = teclado.nextInt();
		
		System.out.println("Ingrese su segundo número ");
		numero2 = teclado.nextInt();
		
		System.out.println("Ingrese su tercer número ");
		numero3 = teclado.nextInt();
		
		int suma = numero1 + numero2 + numero3;
		
		System.out.println("El resultado de " + numero1 + " + " + numero2 + " + " + numero3 + " es " + suma);
		
		

}
}
